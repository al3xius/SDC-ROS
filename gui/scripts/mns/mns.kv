#:kivy 1.10.1

<MenuButton@Button>:
    text_size: self.size
    font_size: '20sp'
    size_hint: .5, .15
    halign: 'center'
    valign: 'middle'
    markup: True

<ScreenMNS>:
    BoxLayout:
        cols: 1

        Label:
            halign: 'center'
            valign: 'top'
            text: 'User Terminal'
            text_size: self.size
            font_size: '40sp'

    AnchorLayout:
        anchor_x: 'center'

        Button:
            size_hint: .2, .2
            halign: 'center'
            valign: 'middle'
            text: 'Cruise Control'
            text_size: self.size
            font_size: '20sp'

    BoxLayout:
        cols: 4
        orientation: 'horizontal'
        padding: 15
        spacing: 15

        MenuButton:
            text: 'OPTIONS'
            on_release: root.manager.current = 'OPT'
        MenuButton:
            text: 'CURRENT\nCAR\nDATA'
            on_release: root.manager.current = 'CCD'
        MenuButton:
            text: 'CAMERA VIEW'
            on_release: root.manager.current = 'CAV'
        MenuButton:
            text: 'MAP'
            on_release: root.manager.current = 'MAP'
